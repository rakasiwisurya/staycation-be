<!-- DataTables -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="<%= booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />
        <% if(booking.payments.status === "Process") { %>
        <div class="row w-100 my-2 mx-0">
          <div class="col-6">
            <form
              action="/admin/booking/<%= booking._id %>/confirm?_method=PUT"
              method="POST"
            >
              <button
                type="submit"
                href=""
                class="btn btn-success btn-sm w-100"
              >
                <i class="fas fa-check"></i>
                Confirm
              </button>
            </form>
          </div>
          <div class="col-6">
            <form
              action="/admin/booking/<%= booking._id %>/reject?_method=PUT"
              method="POST"
            >
              <button type="submit" href="" class="btn btn-danger btn-sm w-100">
                <i class="fas fa-times"></i>
                Reject
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableFeature"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>$ <%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End of Datatables -->
